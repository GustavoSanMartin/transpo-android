<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Transpo" parent="Theme.MaterialComponents.DayNight.NoActionBar" tools:targetApi="27">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Transpo.Toolbar</item>
        <item name="colorSurface">@color/darkModeBackground</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Widget.Transpo.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/darkModeBackground</item>
