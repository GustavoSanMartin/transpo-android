<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Transpo" parent="Theme.MaterialComponents.DayNight.NoActionBar" tools:targetApi="27">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Transpo.Toolbar</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.Transpo.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
        <item name="titleTextColor">@color/silver</item>
        <item name="subtitleTextColor">@color/silver</item>
    </style>

    <style name="SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/silver</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:paddingStart">@dimen/xsmall</item>
        <item name="android:paddingEnd">@dimen/xsmall</item>
        <item name="android:padding">@dimen/xxsmall</item>
    </style>
</resources>